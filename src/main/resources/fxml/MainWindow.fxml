<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import org.controlsfx.control.*?>

<fx:root type="javafx.scene.layout.BorderPane" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <VBox alignment="CENTER" BorderPane.alignment="CENTER">
            <MenuBar>
                <Menu mnemonicParsing="false" text="App">
                    <MenuItem fx:id="imageLoaderItem" mnemonicParsing="false" text="Load Image..." />
                    <MenuItem fx:id="songLoaderItem" mnemonicParsing="false" text="Load a song.." />
                    <MenuItem fx:id="advSett" mnemonicParsing="false" text="Advanced Settings..." />
                </Menu>
            </MenuBar>
            <HBox alignment="CENTER" maxWidth="1.7976931348623157E308">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
                <Label fx:id="headerText" alignment="TOP_LEFT" maxWidth="1.7976931348623157E308" minWidth="-Infinity" text="Welctome to SAVTI" textFill="#222222">
                    <font>
                        <Font name="System Bold" size="25.0" />
                    </font>
                </Label>
                <ToggleSwitch fx:id="darkMode" selected="true" text="Dark Mode">
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </HBox.margin>
                </ToggleSwitch>
            </HBox>
        </VBox>
    </top>
    <left>
        <VBox BorderPane.alignment="CENTER">
            <Button fx:id="randomizeButton" mnemonicParsing="false" styleClass="dark-blue" stylesheets="@../css/main.css" text="Shuffle the image">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
                <font>
                    <Font size="15.0" />
                </font>
            </Button>
            <Button fx:id="sortingButton" mnemonicParsing="false" styleClass="dark-blue" stylesheets="@../css/main.css" text="Start sorting!">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
                <font>
                    <Font size="15.0" />
                </font>
            </Button>
            <Button fx:id="cleanButton" layoutX="10.0" layoutY="36.0" mnemonicParsing="false" styleClass="dark-blue" stylesheets="@../css/main.css" text="Remove the image">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
                <font>
                    <Font size="15.0" />
                </font>
            </Button>
            <Button fx:id="ffmpegButton" mnemonicParsing="false" styleClass="dark-blue" stylesheets="@../css/main.css" text="Set FFMPEG path">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
                <font>
                    <Font size="15.0" />
                </font>
            </Button>
            <Button fx:id="ffprobeButton" mnemonicParsing="false" styleClass="dark-blue" stylesheets="@../css/main.css" text="Set FFPROBE path">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
                <font>
                    <Font size="15.0" />
                </font>
            </Button>
            <Button fx:id="outputButton" layoutX="20.0" layoutY="155.0" mnemonicParsing="false" styleClass="dark-blue" stylesheets="@../css/main.css" text="Set output directory">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
                <font>
                    <Font size="15.0" />
                </font>
            </Button>
            <Hyperlink fx:id="pathLabel" alignment="CENTER" contentDisplay="CENTER" text="Path to output: " wrapText="true">
                <font>
                    <Font size="18.0" />
                </font>
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
            </Hyperlink>
            <ComboBox id="comboBox" fx:id="chooseAlgo" stylesheets="@../css/combobox.css">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
            </ComboBox>
        </VBox>
    </left>
    <center>
        <Group BorderPane.alignment="CENTER">
            <ImageView fx:id="imageView" pickOnBounds="true" preserveRatio="true" />
        </Group>
    </center>
</fx:root>
