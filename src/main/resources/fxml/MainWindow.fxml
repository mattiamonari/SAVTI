<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import org.controlsfx.control.*?>

<fx:root type="javafx.scene.layout.BorderPane" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <VBox alignment="CENTER" BorderPane.alignment="CENTER" fx:id="menuVBox">
            <HBox alignment="CENTER" maxWidth="1.7976931348623157E308">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
                <Label fx:id="headerText" alignment="TOP_LEFT" maxWidth="1.7976931348623157E308" minWidth="-Infinity" text="Welcome to SAVTI" textFill="#222222">
                    <font>
                        <Font name="System Bold" size="25.0" />
                    </font>
                </Label>
                <ToggleSwitch fx:id="darkMode" selected="true" text="Dark Mode">
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </HBox.margin>
                </ToggleSwitch>
            </HBox>
        </VBox>
    </top>
    <center>
        <Group BorderPane.alignment="CENTER">
            <ImageView fx:id="imageView" pickOnBounds="true" preserveRatio="true" />
        </Group>
    </center>
</fx:root>
