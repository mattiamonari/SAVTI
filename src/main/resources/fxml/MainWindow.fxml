<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import org.controlsfx.control.*?>

<fx:root type="javafx.scene.layout.BorderPane" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
    <top>
       <VBox alignment="CENTER" BorderPane.alignment="CENTER">
           <MenuBar>
               <Menu mnemonicParsing="false" text="App">
                   <MenuItem fx:id="imageLoaderItem" mnemonicParsing="false" text="Load Image..." />
                   <Menu mnemonicParsing="false" text="Settings...">
                       <CheckMenuItem fx:id="openVideo" mnemonicParsing="false" text="Riproduci video alla fine" />
                       <CheckMenuItem fx:id="saveimageItem" mnemonicParsing="false" text="Salva frame video" />
                       <MenuItem fx:id="changeoutputItem" mnemonicParsing="false" text="Cambia nome del file video" />
                   </Menu>
                   <MenuItem fx:id="songLoaderItem" mnemonicParsing="false" text="Load a song.." />
               </Menu>
           </MenuBar>
           <HBox maxWidth="1.7976931348623157E308">
               <VBox.margin>
                   <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
               <Label fx:id="headerText" alignment="TOP_LEFT" maxWidth="1.7976931348623157E308" minWidth="-Infinity" text="Welctome to SAVTI" textFill="#222222">
                  <font>
                      <Font name="System Bold" size="25.0" />
                  </font>
               </Label>
            <ToggleSwitch fx:id="darkMode" text="Dark Mode">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </ToggleSwitch>
           </HBox>
       </VBox>
    </top>
    <left>
        <VBox BorderPane.alignment="CENTER">
            <Button fx:id="randomizeButton" mnemonicParsing="false" styleClass="dark-blue" text="Randomizza l'immagine">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
            </Button>
            <Button fx:id="sortingButton" mnemonicParsing="false" styleClass="dark-blue" text="Ricomponi l'immgine">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
            </Button>
            <Button fx:id="pauseButton" disable="true" mnemonicParsing="false" styleClass="dark-blue" text="Pausa">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
            </Button>
            <Button fx:id="cleanButton" layoutX="10.0" layoutY="36.0" mnemonicParsing="false" styleClass="dark-blue" text="Rimuovi l'immagine">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
            </Button>
            <Button fx:id="ffmpegButton" mnemonicParsing="false" styleClass="dark-blue" text="Setta il percorso a FFMPEG!">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
            </Button>
            <Button fx:id="ffprobeButton" mnemonicParsing="false" styleClass="dark-blue" text="Setta il percorso a FFProbe!">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
            </Button>
            <Button fx:id="outputButton" layoutX="20.0" layoutY="155.0" mnemonicParsing="false" styleClass="dark-blue" text="Scegli dove salvare il video!">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
            </Button>
            <Label text="Scegli il taglio dell'immagine">
                <VBox.margin>
                    <Insets left="10.0" top="10.0" />
                </VBox.margin>
            </Label>
            <HBox>
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" />
                </VBox.margin>
                <Slider fx:id="precisionSlider" blockIncrement="1.0" majorTickUnit="5.0" max="50.0" minorTickCount="1" prefHeight="38.0" prefWidth="175.0" showTickLabels="true" showTickMarks="true" value="8.0" />
                <Label fx:id="precisionValue" prefWidth="30.0" />
            </HBox>
            <Label text="Scegli il framerate">
                <VBox.margin>
                    <Insets left="10.0" top="10.0" />
                </VBox.margin>
            </Label>
            <HBox>
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" />
                </VBox.margin>
                <Slider fx:id="framerateSlider" blockIncrement="1.0" majorTickUnit="3.0" max="60.0" minorTickCount="0" prefHeight="38.0" prefWidth="175.0" showTickLabels="true" showTickMarks="true" value="30.0">
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </Slider>
                <Label fx:id="framerateValue" prefWidth="30.0" />
            </HBox>
            <Label text="Durata video (secondi)">
                <VBox.margin>
                    <Insets left="10.0" top="10.0" />
                </VBox.margin>
            </Label>
            <HBox>
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" />
                </VBox.margin>
                <Slider fx:id="videodurationSlider" blockIncrement="1.0" majorTickUnit="1.0" max="30.0" minorTickCount="0" prefHeight="38.0" prefWidth="175.0" showTickLabels="true" showTickMarks="true" value="15.0" />
                <Label fx:id="videodurationValue" prefWidth="30.0" />
            </HBox>
            <ComboBox fx:id="chooseAlgo" prefWidth="150.0">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
            </ComboBox>
        </VBox>
    </left>
    <center>
        <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <GridPane fx:id="gridPane">
            <VBox.margin>
               <Insets left="10.0" right="10.0" />
            </VBox.margin></GridPane>
        </VBox>
    </center>
   <bottom>
         <Hyperlink fx:id="pathLabel" alignment="CENTER" contentDisplay="CENTER" text="Path to output: " wrapText="true" BorderPane.alignment="CENTER">
             <font>
                 <Font size="18.0" />
             </font>
         </Hyperlink>
   </bottom>
</fx:root>
