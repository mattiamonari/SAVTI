<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<fx:root type="javafx.scene.layout.BorderPane" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <GridPane fx:id="gridPane" BorderPane.alignment="CENTER">

      </GridPane>
   </center>
   <top>
      <VBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <MenuBar>
               <menus>
                  <Menu mnemonicParsing="false" text="App">
                     <items>
                        <MenuItem fx:id="imageLoaderItem" mnemonicParsing="false" text="Load Image..." />
                        <MenuItem fx:id="settingsItem" mnemonicParsing="false" text="Settings..." />
                     </items>
                  </Menu>
               </menus>
            </MenuBar>
            <Label alignment="TOP_LEFT" text="Welcome!" textFill="#222222">
               <font>
                  <Font name="System Bold" size="25.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </top>
   <left>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="randomizeButton" mnemonicParsing="false" text="Randomizza l'immagine">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin></Button>
            <Button fx:id="backToTheStart" mnemonicParsing="false" text="Ricomponi l'immgine">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin></Button>
            <Button fx:id="cleanButton" layoutX="10.0" layoutY="36.0" mnemonicParsing="false" text="Rimuovi l'immagine">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin></Button>
         </children>
      </VBox>
   </left>
</fx:root>
