<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import org.controlsfx.control.*?>

<fx:root type="javafx.scene.layout.BorderPane" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <VBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <MenuBar>
               <menus>
                  <Menu mnemonicParsing="false" text="App">
                     <items>
                        <MenuItem fx:id="imageLoaderItem" mnemonicParsing="false" text="Load Image..." />
                        <Menu mnemonicParsing="false" text="Settings...">
                           <items>
                              <CheckMenuItem fx:id="openVideo" mnemonicParsing="false" text="Riproduci video alla fine" />
                              <CheckMenuItem fx:id="saveimageItem" mnemonicParsing="false" text="Salva frame video" />
                              <MenuItem fx:id="changeoutputItem" mnemonicParsing="false" text="Cambia nome del file video" />
                           </items>
                        </Menu>
                        <MenuItem fx:id="songLoaderItem" mnemonicParsing="false" text="Load a song.." />
                     </items>
                  </Menu>
               </menus>
            </MenuBar>
            <HBox maxWidth="1.7976931348623157E308">
               <children>
                  <Label fx:id="headerText" alignment="TOP_LEFT" maxWidth="1.7976931348623157E308" minWidth="-Infinity" text="Welcome!" textFill="#222222">
                     <font>
                        <Font name="System Bold" size="25.0" />
                     </font>
                  </Label>
                  <ToggleSwitch fx:id="darkMode" text="Dark Mode" />
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </top>
   <left>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="randomizeButton" mnemonicParsing="false" text="Randomizza l'immagine">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin></Button>
            <Button fx:id="sortingButton" mnemonicParsing="false" text="Ricomponi l'immgine">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin></Button>
            <Button fx:id="pauseButton" disable="true" mnemonicParsing="false" text="Pausa">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="cleanButton" layoutX="10.0" layoutY="36.0" mnemonicParsing="false" text="Rimuovi l'immagine">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin></Button>
            <Button fx:id="ffmpegButton" mnemonicParsing="false" text="Setta il percorso a FFMPEG!">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="ffprobeButton" mnemonicParsing="false" text="Setta il percorso a FFProbe!">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="outputButton" layoutX="20.0" layoutY="155.0" mnemonicParsing="false" text="Scegli dove salvare il video!">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin></Button>
            <Label text="Scegli il taglio dell'immagine">
               <VBox.margin>
                  <Insets left="10.0" top="10.0" />
               </VBox.margin>
            </Label>
            <HBox>
               <children>
                  <Slider fx:id="precisionSlider" blockIncrement="5.0" majorTickUnit="5.0" minorTickCount="0" showTickLabels="true" showTickMarks="true" value="50.0" />
                  <Label fx:id="precisionValue" />
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" />
               </VBox.margin>
            </HBox>
            <Label text="Scegli il framerate">
               <VBox.margin>
                  <Insets left="10.0" top="10.0" />
               </VBox.margin>
            </Label>
            <HBox>
               <children>
                  <Slider fx:id="framerateSlider" blockIncrement="5.0" majorTickUnit="5.0" max="60.0" minorTickCount="0" showTickLabels="true" showTickMarks="true" value="30.0">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Slider>
                  <Label fx:id="framerateValue" />
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" />
               </VBox.margin>
            </HBox>
            <Label text="Durata video (secondi)">
               <VBox.margin>
                  <Insets left="10.0" top="10.0" />
               </VBox.margin>
            </Label>
            <HBox>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" />
               </VBox.margin>
               <children>
                  <Slider fx:id="videodurationSlider" blockIncrement="5.0" majorTickUnit="5.0" max="30.0" minorTickCount="0" showTickLabels="true" showTickMarks="true" value="15.0" />
                  <Label fx:id="videodurationValue" />
               </children>
            </HBox>
            <ComboBox fx:id="chooseAlgo" prefWidth="150.0">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </ComboBox>
            <HBox>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </left>
   <center>
      <GridPane fx:id="gridPane" BorderPane.alignment="CENTER">

      </GridPane>
   </center>
</fx:root>
